	"item": [
		{
			"name": "Registration and Step up",
			"item": [
				{
					"name": "1. Registration",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\"username\": \"Gusatvino\", \"password\": \"TestPassword\"}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{apiUrl}}/api/v1/signup",
							"host": [
								"{{apiUrl}}"
							],
							"path": [
								"api",
								"v1",
								"signup"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Authentication and authorization",
			"item": [
				{
					"name": "1. Authentication",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonResponse = pm.response.json();\r",
									"\r",
									"if (jsonResponse.access_token) {\r",
									"    pm.globals.set(\"user_at\", jsonResponse.access_token);\r",
									"}\r",
									"\r",
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\"username\": \"Gusatvino\", \"password\": \"TestPassword\"}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{apiUrl}}/api/v1/auth",
							"host": [
								"{{apiUrl}}"
							],
							"path": [
								"api",
								"v1",
								"auth"
							]
						}
					},
					"response": []
				},
				{
					"name": "2. Read authenticated user profile",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "GET",
						"header": [
							{
								"key": "X-Auth-Token",
								"value": "{{user_at}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{apiUrl}}/api/v1/@me",
							"host": [
								"{{apiUrl}}"
							],
							"path": [
								"api",
								"v1",
								"@me"
							]
						}
					},
					"response": []
				}
			]
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "apiUrl",
			"value": "http://localhost:8000",
			"type": "string"
		}
	]
}